{
    "name": "ft-transcendence",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "build": "tsc --noEmit && npm run build:css && npm run build:js",
        "build:dev": "concurrently \"npm run build:css:dev\" \"npm run build:js:dev\"",
        "build:css": "npx tailwindcss -i ./src/styles/styles.css -o ./dist/output.css --minify",
        "build:css:dev": "npx tailwindcss -i ./src/styles/styles.css -o ./dist/output.css --watch --verbose",
        "build:js": "node esbuild.config.js",
        "build:js:dev": "node esbuild.config.js --watch",
        "compile": "tsc",
        "dev": "npm install && npm run compile && npm run build && webpack serve --mode development"
    },
    "dependencies": {
        "@babylonjs/core": "^7.51.3",
        "@types/earcut": "^3.0.0",
        "earcut": "^3.0.1",
        "tailwindcss": "3.4.17",
        "typescript": "^5.7.3"
    },
    "devDependencies": {
        "@babylonjs/inspector": "^7.52.2",
        "concurrently": "^9.1.2",
        "esbuild": "^0.25.1"
    }
}
