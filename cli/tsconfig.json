{
    "compilerOptions": {
        // "target": "ES2020",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "inquirer"]
    },
    "include": ["src/**/*"]
}
